<UserControl xmlns="https://github.com/avaloniaui"
             x:Class="H2_Gruppe_project.Views.DashboardView"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:H2_Gruppe_project.ViewModels"
             x:DataType="vm:DashboardViewModel">

    <StackPanel Margin="20">
        <TextBlock Text="Home screen" FontSize="24" HorizontalAlignment="Center"/>
        <TextBlock Text="Welcome," FontSize="18" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding UserName}" FontSize="18" HorizontalAlignment="Center" Margin="0,10"/>
		
		<Button Content="Add Vehicle" Command="{Binding GoToAddVehicleCommand}" HorizontalAlignment="Center" Margin="0,10"/>
		<Button Content="Profile" Command="{Binding GoToProfileCommand}" HorizontalAlignment="Center" Margin="0,10"/>
		<Button Content="Logout" Command="{Binding LogoutCommand}" HorizontalAlignment="Center" Margin="0,10" Foreground="Red"/>
    
	</StackPanel>
</UserControl>
